<Window x:Class="TaskDetails"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskOrganizer"
        xmlns:Properties="clr-namespace:TaskOrganizer"
        mc:Ignorable="d"
        Title="Task Details" SizeToContent="Height" 
        MinWidth="552"
        MinHeight="300" 
        Width="552"
        Height="300"
        Left="{Binding TaskDetailsLeft, Source={x:Static Properties:MySettings.Default}, Mode=TwoWay}"
        Top="{Binding TaskDetailsTop, Source={x:Static Properties:MySettings.Default}, Mode=TwoWay}"
        Closed="Window_Closed">
    <Grid>
        <!--Master Grid -->
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <!-- Inner Grid for top half-->
        <Grid Grid.Row="0"
              Margin="10,10,10,0">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <!--Desc Row-->
            <Label Grid.Row="0"
                       Grid.Column="0"
                       Content="Desc:" 
                       HorizontalAlignment="Right"
                       VerticalAlignment="Center"
                       x:Name="lblDesc"></Label>
            <TextBox Grid.Row="0"
                         Grid.Column="1"
                         MinWidth="75" 
                         MaxWidth="Infinity"
                         Margin="0,2,2,2"
                         x:Name="tbxDesc"
                         AcceptsReturn="False"
                         MaxLength="50"></TextBox>
            <!--Link Row-->
            <Label Grid.Row="1"
                       Grid.Column="0"
                       Content="Link:" 
                       HorizontalAlignment="Right"
                       VerticalAlignment="Center"
                       x:Name="lblLink"></Label>
            <TextBox Grid.Row="1" 
                         Grid.Column="1"
                         MinWidth="75" 
                         MaxWidth="Infinity"
                         Margin="0,2,2,2"
                         x:Name="tbxLink"></TextBox>
            <!--Type Selector Row-->
            <Label Grid.Row="2"
                        Grid.Column="0"
                        Content="Type:" 
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        x:Name="lblType"></Label>
            <ComboBox Grid.Row="2"
                        Grid.Column="1"
                        MinWidth="75" 
                        MaxWidth="Infinity"
                        Margin="0,2,2,2"
                        x:Name="cbxType"></ComboBox>
            <!--Ticket/Save/Cancel Row-->
            <!--Ticket Label in main grid-->
            <Label  Grid.Row="3"
                    Grid.Column="0"
                    Content="Ticket #"
                    HorizontalAlignment="Right"
                    x:Name="lblTicket">
            </Label>
            <!--Grid to split field for ticket / buttons -->
            <Grid Grid.Row="3" Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="40" />
                    <ColumnDefinition Width="200" />
                </Grid.ColumnDefinitions>
                <!--Desc side TextBox-->
                <TextBox Grid.Column="0" 
                         MinWidth="75" 
                         MaxWidth="Infinity"
                         Margin="0,2,2,2"
                         x:Name="tbxTicket"></TextBox>
                <Label Grid.Column="1" 
                       HorizontalAlignment="Right"
                       VerticalAlignment="Center"
                       Content="Done:"></Label>
                <!--Save/Cancel side UniformGrid-->
                <Grid Grid.Column="2" Grid.ColumnSpan="2" Grid.Row="1" VerticalAlignment="Stretch">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="20"></ColumnDefinition>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <CheckBox Grid.Column="0"
                              VerticalAlignment="Center"
                              HorizontalAlignment="Center"
                              x:Name="chkComplete">
                        </CheckBox>
                    <Button Grid.Column="1"
                            Content="Save"
                            MaxWidth="Infinity"
                            Margin="5"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            MinWidth="75"
                            x:Name="btnSave">
                    </Button>
                    <Button Grid.Column="2"
                            Content="Cancel"
                            MinWidth="75"
                            Margin="5"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            x:Name="btnCancel">

                    </Button>
                </Grid>
            </Grid>
        </Grid>
        <!--Bottom Half: Notes Section-->
        <Grid Grid.Row="1"
                    Margin="10,0,10,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="24"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <Label Content="Notes:" Grid.Row="0" x:Name="lblNotes"></Label>
            <Label x:Name="lblScheduledTime"
                   Grid.Row="0"
                   Content=""
                   HorizontalAlignment="Right">
            </Label>
            <TextBox Text="Type Here"
                    Grid.Row="1"
                    x:Name="tbxNotes"
                    TextWrapping="WrapWithOverflow"
                    AcceptsReturn="True"
                    ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                    ScrollViewer.VerticalScrollBarVisibility="Auto">
            </TextBox>
        </Grid>
    </Grid>
</Window>
